<form id="selectedBookForm" class="hide" action="saveBook" method="post">

  <% if (override) { %>
  <input type='hidden' name='_method' value='put'>
  <input type='hidden' name='id' value='<%= book.id %>'>
  <% } %>

  <img src="" id="formImage">

  <span id="closeFormButton" aria-label="Close the book details window.">&times;</span>

  <section id="formRows">
    <div>
      <label>Image URL</label>
      <input type="text" id="formImageURL" name="image_url" placeholder="image url" required>
    </div>

    <div>
      <label>Title</label>
      <input type="text" id="formTitle" name="title" required>
    </div>

    <div>
      <label>Author</label>
      <input type="text" id="formAuthor" name="author" required>
    </div>

    <div>
      <label>ISBN</label>
      <input type="text" id="formISBN" name="isbn" required>
    </div>

    <div>
      <label>Description</label>
      <textarea type="text" rows="10" id="formDescription" name="description" required></textarea>
    </div>

    <div id="selectBookshelfDiv">
      <label>Bookshelf</label>
      <input type="text" id="formBookShelf" name="newBookshelf" placeholder="Add new">

      <select name="oldBookshelf">
        <% bookShelves.forEach(shelf => { %>
        <option><%= shelf.bookshelf %></option>
        <% }); %>
      </select>
    </div>
  </section>

  <button id="bookSubmitButton" type="submit">Add to My Library</button>

</form>