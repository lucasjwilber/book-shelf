<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../partials/head.ejs %>
  <title>Library</title>
</head>

<body>
  <%- include ../partials/header.ejs %>

  <h1>your library</h1>

  <% library.forEach(shelf => { %>
    <section class="shelf">
      
      <% shelf.books.forEach(book => { %>
      <article class="book" style="background-image: url('<%=book.image_url%>')">
        <!-- <%- include ../partials/bookDetails.ejs %> -->
        <a href="/<%= book.id %>">Details</a>
      </article>
      <% }); %>

    </section>
    <h2 style="width: <%= shelf.name.length * .8 %>em"><%= shelf.name %></h2>
    
  <% }); %>



  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="js/app.js"></script>
</body>

</html>